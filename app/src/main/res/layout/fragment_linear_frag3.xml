<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/axb4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ax + by + cz = d"
        android:textAlignment="center"
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/axb5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter three simultaneous equations : "
        android:layout_below="@id/axb4"
        android:textAlignment="center"
        android:textSize="20dp"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/axb5">

        <!-- Header Row -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="a"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="b"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="c"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="d"/>
        </TableRow>

        <!-- Equation 1 -->
        <TableRow>
            <EditText
                android:id="@+id/l3CoefficientA1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="A1"
                android:inputType="numberSigned|numberDecimal"/>
            <EditText
                android:id="@+id/l3CoefficientB1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="B1"
                android:inputType="numberSigned|numberDecimal"/>
            <EditText
                android:id="@+id/l3CoefficientC1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="C1"
                android:inputType="numberSigned|numberDecimal"/>
            <EditText
                android:id="@+id/l3ConstantD1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="D1"
                android:inputType="numberSigned|numberDecimal"/>
        </TableRow>

        <!-- Equation 2 -->
        <TableRow>
            <EditText
                android:id="@+id/l3CoefficientA2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="A2"
                android:inputType="numberSigned|numberDecimal"/>
            <EditText
                android:id="@+id/l3CoefficientB2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="B2"
                android:inputType="numberSigned|numberDecimal"/>
            <EditText
                android:id="@+id/l3CoefficientC2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="C2"
                android:inputType="numberSigned|numberDecimal"/>
            <EditText
                android:id="@+id/l3ConstantD2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="D2"
                android:inputType="numberSigned|numberDecimal"/>
        </TableRow>

        <!-- Equation 3 -->
        <TableRow>
            <EditText
                android:id="@+id/l3CoefficientA3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="A3"
                android:inputType="numberSigned|numberDecimal"/>
            <EditText
                android:id="@+id/l3CoefficientB3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="B3"
                android:inputType="numberSigned|numberDecimal"/>
            <EditText
                android:id="@+id/l3CoefficientC3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="C3"
                android:inputType="numberSigned|numberDecimal"/>
            <EditText
                android:id="@+id/l3ConstantD3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="D3"
                android:inputType="numberSigned|numberDecimal"/>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="270dp">

        <Button
            android:id="@+id/buttonSolve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solve"
            android:backgroundTint="#EE7B2E"
            android:textSize="14dp"
            android:onClick="onSolveButtonClick"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:layout_marginTop="350dp" />
</RelativeLayout>
